{
	"manifest_version": 2,
	"name": "Your Jewish Mother",
	"description": "Wish you stopped being lazy and started working? Your Mother can help!",
	"version": "1.0",

	"browser_action": {
		"default_icon": "icon.png",
		"default_popup": "popup.html"
	},
	"permissions": [ "notifications", "tabs", "activeTab" ],
	"content_scripts": [
		{
			"matches": [ "<all_urls>" ],
			"js": [ "content.js" ]
		}
	],
	"background": {
		"scripts": [ "Utils.js", "background.js" ],
		"persistent": true
	},
	"web_accessible_resources": [ "notificationSound.mp3" ]
}
